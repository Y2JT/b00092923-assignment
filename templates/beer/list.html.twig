{% extends 'base.html.twig' %}

{% block body %}
    <h1>Beer LIST page</h1>

    <ul>
        {% for beer in beers %}
        <li>
            id = {{ beer.id }}
            <br>
            title = {{ beer.title }}
            <br>
            summary = {{ beer.summary }}
            <br>
            photo = {{ beer.photo }}
            <br>
            description = {{ beer.desc }}
            <br>
            list of ingredients = {{ beer.ingredients }}
            <br>
            price range = {{ beer.price }}
            <a href="{{ url('beer_show', {id : beer.id}) }}">(details)</a>
        </li>
        {% endfor %}
    </ul>
{% endblock %}