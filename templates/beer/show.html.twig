{% extends 'base.html.twig' %}

{% block title %}Beer{% endblock %}

{% block body %}

    <h1>Beer</h1>

    <table>
        <tr>
            <th>Id</th>
            <td>{{ beer.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ beer.name }}</td>
        </tr>
        <tr>
            <th>Summary</th>
            <td>{{ beer.summary }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>{{ beer.image }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ beer.description }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ beer.price }}</td>
        </tr>
    </table>

    <a href="{{ path('beer_index') }}">back to list</a>

    <a href="{{ path('beer_edit', {'id': beer.id}) }}">edit</a>

    {% include 'beer/_delete_form.html.twig' with {'identifier': beer.id} only %}

{% endblock %}