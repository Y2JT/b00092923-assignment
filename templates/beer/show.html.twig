{% extends 'base.html.twig' %}

{% block title %}Beer{% endblock %}

{% block body %}

    <h1>{{ beer.name }}</h1>

    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <td>{{ beer.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ beer.name }}</td>
        </tr>
        <tr>
            <th>Summary</th>
            <td>{{ beer.summary }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img src="/images/beer/{{ beer.image }}.png" alt="{{ beer.name }}" width="150" height="150"/></td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ beer.description }}</td>
        </tr>
        <tr>
            <th>Ingredients</th>
            <td>{{ beer.ingredients }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>â‚¬{{ beer.price }}</td>
        </tr>
    </table>
    {% if is_granted('ROLE_USER') %}
    <a href="{{ path('beer_edit', {'id': beer.id}) }}">Edit</a>

    {% include 'beer/_delete_form.html.twig' with {'identifier': beer.id} only %}
    {% endif %}
{% endblock %}